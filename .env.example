# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ORG_ID=org-your-org-id-here

# Anthropic Configuration  
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Model Selection Override (optional)
# AMP_MODEL=sonnet-4  # Override default model selection

# Cost and Budget Configuration
MONTHLY_BUDGET=500.00
COST_ALERT_THRESHOLD=0.8  # Alert at 80% of budget

# Slack Integration (optional)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
SLACK_FEEDBACK_WEBHOOK=https://hooks.slack.com/services/your/feedback/webhook

# GitHub Integration (optional)
GITHUB_TOKEN=ghp_your-github-token
GITHUB_REPO=your-org/amp-eval

# Dashboard Configuration
DASHBOARD_URL=http://localhost:8501
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501

# Database Configuration
DATABASE_URL=sqlite:///amp_eval.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # or 'text' for human-readable logs

# Security and Rate Limiting
MAX_CONCURRENT_EVALUATIONS=5
RATE_LIMIT_PER_MINUTE=60
CIRCUIT_BREAKER_THRESHOLD=10

# Development/Testing
PYTEST_TIMEOUT=300
TEST_DATABASE_URL=sqlite:///:memory:
ENABLE_DEBUG_LOGGING=false
